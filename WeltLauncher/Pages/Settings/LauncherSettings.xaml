<UserControl x:Class="WeltLauncher.Pages.Settings.LauncherSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Edit Launcher Settings" Style="{StaticResource Heading2}" Margin="0, 0, 0, 30"/>
                <CheckBox x:Name="ToggleKeepOpen">Keep launcher open on game launch.</CheckBox>
                <TextBlock Margin="0, 20, 0, 10">Advanced settings</TextBlock>
                <Expander>
                    <StackPanel>
                        <TextBlock>Resolution Width</TextBlock>
                        <TextBox Width="50" HorizontalAlignment="Left"/>
                        <TextBlock>Resolution Height</TextBlock>
                        <TextBox Width="50" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
